<% content_for :sidebar do %>

<% end %>

<p><%= link_to I18n.t('tog_picto.member.photosets.new.create_photoset'),  new_member_picto_photoset_url, {:class => "add button", :title => "Create a new photoset"} -%></p>

<div class="portlet portletB">
	<h2><span><%= I18n.t('tog_picto.site.photosets') %></span></h2>
    <div class="portlet_content">	
        <ul>
					<% if @photosets.empty? %>
						<li><%= I18n.t('tog_picto.site.no_photosets_yet') %></li>
					<% else %>
					    <% @photosets.each do |photoset| %>
                <li class="clearfix">
                    <div class="image left"><%= link_to photoset_image(photoset), picto_photoset_path(photoset) %></div>
                    <p><strong><%= link_to photoset.title, picto_photoset_path(photoset) %><br/>
                    <p><%= photoset.description %></p>
                </li>
					    <% end %>
					<% end %>	
        </ul>
    </div>    
</div>
<% if !@photosets.empty? %>
	<div class="info_results">
	    <span class="info_items">
				<%= I18n.t('tog_picto.site.photosets_to_of', 
									 :start => (@photosets.size > 0 ? (@photosets.offset + 1) : '0'),
									 :end => @photosets.size + @photosets.offset, 
									 :total => @photosets.total_entries) %> 
	    </span>
	    <span class="pages_navigation right">
		      <%= will_paginate @photosets %>
	    </span>
	</div>
<%end%>
